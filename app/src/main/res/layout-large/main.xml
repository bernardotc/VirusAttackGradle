<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/main_background">

    <TextView android:id="@+id/title_game"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="180dp"
              android:text="@string/app_name"
              android:textAllCaps="true"
              android:textSize="70sp"/>

    <RelativeLayout
            android:id="@+id/vitamins_box"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

        <ImageView
                android:id="@+id/img_box"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/button_blue"/>

        <ImageView
                android:id="@+id/img_vitamin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:scaleType="fitCenter"
                android:src="@drawable/vitamins"/>

        <TextView
                android:id="@+id/text_vitamin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:gravity="center_horizontal"
                android:text="@string/vitamins"
                android:textSize="25sp"
                android:textColor="#DBED7E"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/button_start"
            android:layout_width="400dp"
            android:layout_height="110dp"
            android:layout_marginTop="550dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

        <ImageView
                android:id="@+id/img_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/button"/>

        <TextView
                android:id="@+id/text_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="@string/startMessage"
                android:textSize="40sp"
                android:textColor="#000099"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/button_store"
            android:layout_width="400dp"
            android:layout_height="110dp"
            android:layout_marginTop="670dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

        <ImageView
                android:id="@+id/img_buttonStore"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/button"/>

        <TextView
                android:id="@+id/text_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="@string/store"
                android:textSize="40sp"
                android:textColor="#000099"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/button_instructions"
            android:layout_width="400dp"
            android:layout_height="110dp"
            android:layout_marginTop="790dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

        <ImageView
                android:id="@+id/img_buttonInstructions"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/button"/>

        <TextView
                android:id="@+id/text_instructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="@string/instructionsItem"
                android:textSize="40sp"
                android:textColor="#000099"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

    </RelativeLayout>
</RelativeLayout>

